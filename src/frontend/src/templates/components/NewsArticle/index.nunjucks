{% macro render(item) %}

<article class="news-detail">
   {% if item.title %}
      <h2>{{ item.title }}</h2>
   {% endif %}
   <p>
      {% if item.date %}
         {{ item.date }},
      {% endif %}
      {% if item.author %}
         <strong>{{ item.author }}</strong>
      {% endif %}
   </p>
      
   {% if item.body %}
      <div>
         {{ item.body | safe }}
      </div>
   {% endif %}
</article>

{% endmacro %}
